{
  "root": true,
  "extends": [
    "plugin:@typescript-eslint/recommended", 
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint", 
    "simple-import-sort"
  ],
  "rules": {
    "indent": ["error", 2],
    "jsx-quotes": ["error", "prefer-double"],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],

    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  }
}
